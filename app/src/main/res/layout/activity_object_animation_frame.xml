<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lixm.animationdemo.activity.ObjectAnimationFrameActivity">

    <com.lixm.animationdemo.customview.LevelImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/level_img"
        android:layout_centerInParent="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/egg"
        android:text="鸡蛋"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/egg"
        android:text="金砖"
        android:id="@+id/gold"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/gold"
        android:text="涨停"
        android:id="@+id/up"
        />
</RelativeLayout>
