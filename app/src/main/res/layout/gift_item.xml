<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >

    <RelativeLayout
        android:id="@+id/rl_gift_bg"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/grid_gift_img_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="6dp"
            android:layout_marginStart="6dp"
            android:visibility="gone"
            android:layout_marginEnd="6dp"
            android:layout_centerInParent="true"
            android:background="@mipmap/pitch_on_box"
            />

        <ImageView
            android:id="@+id/grid_gift_img"
            android:layout_width="match_parent"
            android:scaleType="centerInside"
            android:layout_margin="8dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:src="@mipmap/item_rotten_egg_8"
            />

        <TextView
            android:id="@+id/gift_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="7dp"
            android:text="å¼±"
            android:textColor="@color/live_gift_txt_normal"
            android:textSize="10sp"
            />

        <TextView
            android:id="@+id/gift_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/live_circle_top"
            android:gravity="center"
            android:maxLines="1"
            android:minHeight="12dp"
            android:minWidth="12dp"
            android:paddingEnd="3dp"
            android:paddingStart="3dp"
            android:text="8"
            android:textColor="@color/color_333"
            android:textSize="8sp"
            />
    </RelativeLayout>
</RelativeLayout>